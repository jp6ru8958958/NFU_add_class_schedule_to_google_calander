{
  "manifest_version": 2,
  "name": "add NFU curricolum to google calander",
  "version": "1.0",

  "description": "Extension for transfer NFU curricolum to google calander.",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "content_scripts": [
    {
      "matches": ["https://ecare.nfu.edu.tw/aaiqry/chooseconfirm"],
      "js": ["button.js", "calander.js"]
    }
  ],

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "NFU curricolum",
    "default_popup": "popup/index.html"
  }
}
